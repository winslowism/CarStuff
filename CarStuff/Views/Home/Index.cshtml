@model IEnumerable<CarPurchase>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">CarStuff</h1>
    <h4>Carpurchases</h4>
    
    <table class="table table-bordered table-responsive table-hover">  
        <tr>  
            <th>Customer Name</th>  
            <th>Customer Street</th>  
            <th>Car Make</th>  
            <th>Car Model</th>  
            <th>Paid Price</th>  
            <th>Recommended Price</th>  
            <th>Salesperson</th>
        </tr>  
        @foreach (var purchase in Model)  
        {  
            <tr>  
                <td>@purchase.Customer.FirstName</td>
                <td>@purchase.Customer.Address.Street</td>
                <td>@purchase.Car.Make</td>
                <td>@purchase.Car.Model</td>
                <td>@purchase.PricePaid</td>
                <td>@purchase.Car.RecommendedPrice</td>
                <td>@purchase.SalesPerson.Name</td>
            </tr>  
        }  
    </table>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

